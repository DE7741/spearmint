{
  "name": "spearmint",
  "version": "0.11.0",
  "description": "An open-source developer tool that simplifies testing and hopes to help increase awareness about web accessibility.",
  "main": "public/electron.jsx",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "start": "electron-forge start",
    "start-dev": "concurrently \"electron .\" \"nodemon server/server.js\"",
    "watch": "webpack --config webpack.config.ts --watch",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev": "npm run watch & npm run start-dev",
    "rebuild": "electron-rebuild -f -w node-pty",
    "docker": "electron . --no-sandbox",
    "mac:installer": "electron-builder --mac",
    "win:installer": "electron-builder --win",
    "linux:installer": "electron-builder --linux"
  },
  "build": {
    "appId": "spearmint",
    "productName": "spearmint",
    "mac": {
      "mergeASARs": "false",
      "icon": "./public/icon.icns",
      "category": "public.app-category.utilities",
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "universal"
        ]
      },
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "sign": false,
      "background": null,
      "backgroundColor": "#ffffff",
      "window": {
        "width": "400",
        "height": "300"
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 300,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "./public/icon.png"
    },
    "linux": {
      "icon": "./public/icon.png",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    },
    "files": [
      "./build/**/*",
      "./dist/**/*",
      "./node_modules/**/*",
      "./public/**/*",
      "./server/**/*",
      "*.js",
      "./src/**/*",
      "package.json",
      ".env"
    ],
    "directories": {
      "buildResources": "public",
      "app": "."
    }
  },
  "keywords": [],
  "author": {
    "name": "team spearmint",
    "url": "https://www.spearmintjs.com/",
    "email": "oslabsspearmint@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "@codemirror/lang-javascript": "^6.0.0",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@uiw/react-codemirror": "^4.8.1",
    "babel-loader": "^8.2.2",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.3.1",
    "codemirror": "^6.0.0",
    "concurrently": "^6.4.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fix-path": "^3.0.0",
    "js-beautify": "^1.14.0",
    "mongoose": "^6.0.14",
    "node-pty": "^0.10.1",
    "npm": "^9.3.0",
    "passport": "^0.5.2",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "react": "^17.0.2",
    "react-autosuggest": "^10.1.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.4",
    "react-icons": "^4.3.1",
    "react-modal": "^3.14.4",
    "react-transition-group": "^4.4.2",
    "sass": "^1.37.5",
    "webpack": "^5.50.0",
    "xterm": "^4.15.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@types/webpack-dev-server": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "electron": "^22.0.1",
    "electron-builder": "^23.0.3",
    "electron-rebuild": "^3.2.7",
    "electron-reloader": "^1.2.1",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^29.3.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "spearmint"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Myles Tsutsui"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
